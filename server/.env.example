# Environment variables declared in this file are NOT automatically loaded by Prisma.
# Please add `import "dotenv/config";` to your `prisma.config.ts` file, or use the Prisma CLI with Bun
# to load environment variables from .env files: https://pris.ly/prisma-config-env-vars.

# Prisma supports the native connection string format for PostgreSQL, MySQL, SQLite, SQL Server, MongoDB and CockroachDB.
# See the documentation for all the connection string options: https://pris.ly/d/connection-strings

# =============================================================================
# DOCKER SETUP (Recommended for development)
# =============================================================================
# MySQL Database Configuration (used by docker-compose.yml)
MYSQL_ROOT_PASSWORD=rootpassword
MYSQL_DATABASE=dashboard_db
MYSQL_USER=dashboard_user
MYSQL_PASSWORD=dashboard_pass

# Database connection string for Docker
# Note: Use 'mysql' as hostname when running in Docker, 'localhost' when running locally
DATABASE_URL="mysql://dashboard_user:dashboard_pass@mysql:3306/dashboard_db"

# =============================================================================
# LOCAL SETUP (If running without Docker)
# =============================================================================
# Uncomment and use this DATABASE_URL if you're running backend locally without Docker:
# DATABASE_URL="mysql://username:password@localhost:3306/database_name"

# =============================================================================
# AUTHENTICATION
# =============================================================================
# Google OAuth credentials
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# JWT secret for authentication
JWT_SECRET="your-jwt-secret-key"

# Server port
PORT=4000
